### Django environment example
# Copy this to `.env` and fill in secure values for production.
DJANGO_SECRET_KEY=replace-with-a-strong-secret
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_SECURE_SSL_REDIRECT=True
DJANGO_HSTS_SECONDS=31536000
DJANGO_CSRF_TRUSTED_ORIGINS=
DJANGO_CSP_REPORT_URI=
# Set to True to keep CSP in report-only mode during testing; set to False to enforce.
DJANGO_CSP_REPORT_ONLY=True

# Sentry for error tracking and monitoring
SENTRY_DSN=
# Sample rate for performance traces (0.1 = 10%, 1.0 = 100%, 0.0 = disabled)
SENTRY_TRACES_SAMPLE_RATE=0.1
